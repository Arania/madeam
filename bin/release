#!/bin/sh

RELEASE_NAME=madeam-$1

LATEST_NAME=madeam-latest

BIN_DIR=`pwd`

rm -rf /tmp/${RELEASE_NAME}

echo "- Creating release directory"
mkdir /tmp/${RELEASE_NAME}

echo "- CD to /tmp directory"
cd /tmp

echo "- Copying www directory into release directory"
cp -rv ${BIN_DIR}/../www/ ${RELEASE_NAME}

echo "- Creating git clone in app/vendor/Madeam"
git clone -v ${BIN_DIR}/../../Madeam/ ${RELEASE_NAME}/app/vendor/Madeam/

echo "- Removing .git from clone"
rm -rf ${RELEASE_NAME}/app/vendor/Madeam/.git

echo "- Creating release zip and tgz archives"
tar -zcpPf ${RELEASE_NAME}.tgz ${RELEASE_NAME}
zip -rq ${RELEASE_NAME}.zip ${RELEASE_NAME}

echo "- Creating latest release zip and tgz archives"
tar -zcpPf ${LATEST_NAME}.tgz ${RELEASE_NAME}
zip -rq ${LATEST_NAME}.zip ${RELEASE_NAME}

echo "- Copying release archives to remote over ssh"
scp -P 30000 ${RELEASE_NAME}.tgz joshdavey@67.23.30.170:/home/joshdavey/public_html/madeam.com/public/releases/
scp -P 30000 ${RELEASE_NAME}.zip joshdavey@67.23.30.170:/home/joshdavey/public_html/madeam.com/public/releases/
scp -P 30000 ${LATEST_NAME}.tgz joshdavey@67.23.30.170:/home/joshdavey/public_html/madeam.com/public/releases/
scp -P 30000 ${LATEST_NAME}.zip joshdavey@67.23.30.170:/home/joshdavey/public_html/madeam.com/public/releases/

echo "- Removing release archives"
rm ${RELEASE_NAME}.tgz
rm ${RELEASE_NAME}.zip
rm ${LATEST_NAME}.tgz
rm ${LATEST_NAME}.zip

echo "- Removing release directory"
rm -rf ${RELEASE_NAME}